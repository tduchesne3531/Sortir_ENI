{% extends 'base.html.twig' %}

{% block body %}
    {{ form_errors(registrationForm) }}

    <h1 class="text-3xl font-bold text-center mb-8">Inscription</h1>

    <section class="bg-white shadow-md rounded-2xl p-6 border border-gray-200 max-w-3xl mx-auto">
        {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}
        <div class="flex flex-row">
            {{ form_row(registrationForm.isAdmin) }}
        </div>
        <div class="flex justify-end mt-6">
            <button type="submit" class="bg-cyan-600 text-white px-6 py-2 border-none rounded-full hover:bg-cyan-700 transition">
                Register
            </button>
        </div>
        {{ form_end(registrationForm) }}
    </section>
{% endblock %}
