{% block form_errors %}
    {% if errors|length > 0 %}
        <ul class="text-red-500 text-sm space-y-1 mt-1">
            {% for error in errors %}
                <li class="flex items-center gap-2">
                    <span class="material-symbols-rounded text-3xl">info</span>
                    {{ error.message }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}

