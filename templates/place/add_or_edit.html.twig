{% extends 'base.html.twig' %}

{% block title %}
	{{ place.name ? 'Modifier' : 'Créer' }}
	un lieu
{% endblock %}

{% block body %}
	<h1 class="text-3xl font-bold text-center mb-8">
		{{ place.name ? 'Modifier' : 'Créer' }}
		un lieu
	</h1>

	<section class="bg-white shadow-md rounded-2xl p-6 border border-gray-200 max-w-3xl mx-auto">

		{{ form_start(form) }}

		<div>
			{{ form_label(form.name, 'Nom du lieu', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
			{{ form_widget(form.name, { 'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 mb-4' } }) }}
		</div>

		<div>
			{{ form_label(form.address, 'Adresse', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
			{{ form_widget(form.address, { 'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 mb-4' } }) }}
		</div>

		<div class="grid grid-cols-2 gap-4">
			<div>
				{{ form_label(form.latitude, 'Latitude', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
				{{ form_widget(form.latitude, { 'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 mb-4' } }) }}
			</div>
			<div>
				{{ form_label(form.longitude, 'Longitude', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
				{{ form_widget(form.longitude, { 'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm mb-4' } }) }}
			</div>
		</div>

		<div>
			{{ form_label(form.city, 'Ville', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
			{{ form_widget(form.city, { 'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 p-2 focus:border-blue-500 mb-4 shadow-md' } }) }}
		</div>

		<div class="flex justify-end items-center mt-6 gap-4">

			<button type="submit" class="border-none bg-cyan-600 hover:bg-cyan-700 text-white font-bold py-2 px-4 rounded-full transition">
				{{ place.name ? 'Modifier' : 'Créer' }}
			</button>

			<a href="{{ path('city_add') }}" class="text-cyan-600 hover:text-cyan-700 transition">Ajouter une ville</a>
		</div>

		{{ form_end(form) }}
	</section>
{% endblock %}
