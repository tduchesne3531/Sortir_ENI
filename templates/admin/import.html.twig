{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-3xl font-bold text-gray-800 text-center my-4">Importer des participants</h1>

{#    {% for error in form.vars.errors %}#}
{#        <div class="alert alert-danger">{{ error.message }}</div>#}
{#    {% endfor %}#}
    {{ form_errors(form) }}

<article class="bg-white shadow-md rounded-2xl p-6 border border-gray-200 mx-auto max-w-3xl flex flex-col">

    {% for error in form.csvFile.vars.errors %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
    {{ form_row(form.csvFile) }}
    <div class="flex flex-row items-center gap-4 mt-8 justify-end">
        <button type="submit" class="border-none bg-cyan-600 text-white px-6 py-2 rounded-full hover:bg-cyan-700 transition">Importer</button>
    </div>
        {{ form_end(form) }}
</article>
{% endblock %}
