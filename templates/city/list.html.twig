{% extends 'base.html.twig' %}

{% block title %}Liste des villes{% endblock %}

{% block body %}

    <div>
        <div>
            <form method="get" action="{{ path('city_search') }}">
                <label for="search" class="mr-4 text-gray-600 font-semibold">Le nom contient :</label>
                <input
                        type="text"
                        id="search"
                        name="search"
                        placeholder="Rechercher une ville"
                        value="{{ app.request.query.get('search') }}"
                >
                <button type="submit" class="border-none align-middle">
                    <span class="material-symbols-rounded text-3xl text-cyan-600">search</span>
                </button>
            </form>
        </div>

        {% include 'components/cities.html.twig' %}

        <div class="flex justify-end mt-6">
            <a href="{{ path('city_add') }}" class="bg-cyan-600 text-white px-6 py-2 border-none rounded-full hover:bg-cyan-700 transition">Ajouter</a>
        </div>
    </div>
{% endblock %}
