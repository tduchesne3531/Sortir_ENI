{% extends 'base.html.twig' %}

{% block title %}
	{{ site.name ? 'Modifier' : 'Créer' }}
	un site
{% endblock %}

{% block body %}
	<div class="form-container">
		<h1>{{ site.name ? 'Modifier' : 'Créer' }}
			un site</h1>

		{{ form_start(form, { 'attr': { 'class': 'custom-form' } }) }}
		<div class="form-group">
			{{ form_row(form.name, { 'attr': { 'class': 'form-control' } }) }}
		</div>
		<button class="btn btn-primary">{{ site.name ? 'Modifier' : 'Créer' }}</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
